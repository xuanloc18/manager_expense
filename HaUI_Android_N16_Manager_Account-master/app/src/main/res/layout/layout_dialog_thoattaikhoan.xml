<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="50dp"
    android:background="@drawable/bg_white_conner_16dp_dialog"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="Thoát tài khoản"
        android:textColor="@color/circleColor"
        android:textSize="20sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn có chắc chắn muốn thoát ??"
            android:textAlignment="center"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/thoatDialog2"
                android:layout_marginEnd="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:backgroundTint="#F36464"
                android:textSize="14sp"
                android:layout_height="50dp"
                android:text="Hủy bỏ"/>
            <Button
                android:id="@+id/nhanThoat"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/xanh"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="Thoát"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
