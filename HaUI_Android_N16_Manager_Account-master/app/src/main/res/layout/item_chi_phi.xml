<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_chiPhi"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="80dp"
    android:layout_marginLeft="@dimen/size10dp"
    android:layout_marginRight="@dimen/size10dp"
    android:layout_marginBottom="@dimen/size10dp"
    app:cardCornerRadius="20dp"
    >

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginStart="@dimen/size10dp"
            android:id="@+id/loai_chi_phi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thực phẩm &amp; Đồ uống"
            android:textAlignment="center"
            android:textColor="#FF2B73"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TableRow
            android:padding="@dimen/size10dp"
            android:layout_below="@+id/loai_chi_phi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/mo_ta_chi_phi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gà rán Hàn Quốc "
                android:textAlignment="textStart"
                android:textColor="#FF2B73"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/gia_chi_phi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10.000đ"
                android:textAlignment="viewEnd"
                android:textColor="#FF2B73"
                android:textSize="14sp"
                android:textStyle="bold" />
        </TableRow>


    </RelativeLayout>


</androidx.cardview.widget.CardView>