<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="40dp"
    android:background="@drawable/bg_white_conner_16dp_dialog"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="Đổi mật khẩu"
        android:textColor="@color/circleColor"
        android:textSize="20sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/matkhauhientai"
            android:background="@drawable/rounded_edittext_states"
            android:layout_width="match_parent"
            android:padding="12dp"
            android:hint="Mật khẩu hiện tại"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/matkhaumoi"
            android:layout_marginTop="@dimen/size10dp"
            android:padding="12dp"
            android:hint="Mật khẩu mới"
            android:background="@drawable/rounded_edittext_states"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/nhaclaimatkhaumoi"
            android:padding="12dp"
            android:layout_marginTop="@dimen/size10dp"
            android:hint="Nhắc lại mật khẩu mới"
            android:background="@drawable/rounded_edittext_states"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/thoatDialog"
                android:layout_marginEnd="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:backgroundTint="#F36464"
                android:textSize="12sp"
                android:layout_height="50dp"
                android:text="Hủy bỏ"/>
            <Button
                android:id="@+id/nhanDoimatkhau"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/xanh"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="Đổi mật khẩu"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
